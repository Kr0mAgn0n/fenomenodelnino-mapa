<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.1.0" method="upgrade">
    <name>Mapa</name>
    <author>Mario Lamas</author>
    <version>0.0.1</version>
    <description>Mapa de alertas del portal sobre el Fenómeno del Niño.</description>
    
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
 
	<files folder="site">
		<filename>index.html</filename>
		<filename>mapa.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>models</folder>
	</files>
 
	<administration>
		<menu link='index.php?option=com_mapa'>Mapa</menu>
		<files folder="admin">
			<filename>index.html</filename>
			<filename>mapa.php</filename>
			<filename>controller.php</filename>
			<folder>sql</folder>
			<folder>views</folder>
			<folder>models</folder>
			<folder>js</folder>
		</files>
	</administration>


  
</extension>
